<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.madfooat.weather.android.demo.app.activity.MainActivity"
    android:id="@+id/mainRL">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/countries_list_hint"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"/>
        <Spinner
            android:id="@+id/countriesSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cities_list_hint"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            android:textSize="15sp"/>

        <Spinner
            android:id="@+id/citiesSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cityWeatherTV"
            android:layout_marginTop="60dp"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@android:color/holo_orange_dark"/>
    </LinearLayout>


</RelativeLayout>